<div class="row">  
  {{!-- search results displayed here --}}
  <div class="col-lg-10 showcase"></div>
  <div class="col-lg-2">
    <panel id="searchPanel">
        {{!-- filter controls --}}
    <form id="searchForm">
      <div class="flex-container">
        <label for="searchFilter"><h2>Filter Results</h2></label>   
      </div>  
        {{!-- price match --}}
      <div class="form-group">
        <div class="flex-container">
          <input value="one" type="radio" name="filter">
          <label for="search"><h4>Search by Price</h4></label>   
        </div>    
        <input type="text" class="form-control" id="minPrice" placeholder="Your Minimum Price">
        <hr>
        <input type="text" class="form-control" id="maxPrice" placeholder="Your Maximum Price">
      </div>
        {{!-- zipcode match --}}
    <div class="form-group">
      <hr>
      <div class="flex-container">
        <input value="two" type="radio" name="filter">
        <label for="areaSelect"><h4>Search by Zip Code</h4></label>
      </div>
      <input type="text" class="form-control" id="areaSelect" placeholder="Zip Code">
      <br>
      <select class="form-control" id="zipRadius">
        <option value="">Within how many miles?</option>
        <option value="1">1 mile</option>
        <option value="5">5 miles</option>
        <option value="10">10 miles</option>
      </select>
    </div>
        {{!-- bedroom match --}}
    <div class="form-group">
      <hr>
      <div class="flex-container">
        <input value="three" type="radio" name="filter">
        <label for="bedNum"><h4>Search by Bedroom</h4></label>
      </div>
      <select class="form-control" id="bedNum">
        <option value="">How Many Bedrooms?</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5+</option>
      </select>
    </div>
      <button id="searchButton" type="button">Push</button>
    </form>
    </panel>
  </div>
</div> 

 
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
